@model MvcProje.Models.userverol
@{
    ViewBag.Title = "KisiProfil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="animated fadeIn">
    <div class="row">

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Profil Bilgilerim</strong>
                </div>
                <div class="card-body">
                    <div class="mx-auto d-block">
                        <div class="location text-sm-center fa-7x"><i class="fa fa-user-circle"></i> </div>
                        <h5 class="text-sm-center mt-2 mb-1">@Model.userad</h5>
                        <div class="location text-sm-center"><i class="fa fa-key"></i> @foreach (var karekter in Model.usersifre)
                        {
                            <i>*</i>
                        }</div>
                        <div class="text-sm-center">
                            @Model.userrolad
                        </div>
                    </div>
                    <hr>
                    <div class="card-text text-sm-center">
                        <a href="#"><i class="fa fa-facebook pr-1"></i></a>
                        <a href="#"><i class="fa fa-twitter pr-1"></i></a>
                        <a href="#"><i class="fa fa-linkedin pr-1"></i></a>
                        <a href="#"><i class="fa fa-pinterest pr-1"></i></a>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="~/Admin/KendiGuncelle/@Model.userid" class="btn btn-floating">Bilgilerimi Güncelle</a><br />
                    <a href="~/Admin/KendiSil/@Model.userid" class="btn btn-flat">
                        Profil Sil
                    </a>
                </div>
            </div>
        </div>
        </div>
    </div>

